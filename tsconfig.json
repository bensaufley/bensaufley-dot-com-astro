{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strictNullChecks": true,
    "allowJs": true,
    "paths": {
      "~components/*": ["./src/components/*"],
      "~content/*": ["./src/content/*"],
      "~layouts/*": ["./src/layouts/*"],
      "~lib/*": ["./src/lib/*"],
      "~pages/*": ["./src/pages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
