---
import { getCollection } from 'astro:content';

import Read, { PER_PAGE } from '~components/reading/Read.astro';
import BaseLayout from '~layouts/BaseLayout.astro';

export const getStaticPaths = async () => {
  const books = await getCollection('books', (book) => !!book.data.finishedAt);

  return Array.from({
    length: Math.ceil(books.length / PER_PAGE),
  }).map((_, i) => ({ params: { page: i + 1 }, props: { page: i + 1 } }));
};

export interface Props {
  class?: string | undefined;
  page?: number;
}

const { class: className, page = 1 } = Astro.props;
---

<BaseLayout class={className} title="Reading" url={page === 0 ? '/reading/' : `/reading/${page}`}>
  <Read page={page} />
</BaseLayout>
